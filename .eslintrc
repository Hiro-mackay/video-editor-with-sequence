{
	"root": true,
	"env": {
	"browser": true,
	"es2021": true,
	"node": true
	},
	"extends": [
		"airbnb-base",
    	"eslint:recommended",
    	"plugin:@typescript-eslint/recommended",
    	"prettier",
    	"prettier/@typescript-eslint",
   ],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
	"ecmaVersion": 12,
	"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"no-use-before-define": "off",
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"js": "never", "jsx": "never", "ts": "never", "tsx": "never"
      }
		],
	"import/no-useless-path-segments": ["error", {
		"noUselessIndex": true
		}],
		"import/prefer-default-export": "off"
	},
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [".js", ".jsx", ".ts", ".tsx"],
				"paths": ["src"]
				}
			},
		"import/extensions": [
			".js", ".jsx", ".ts", ".tsx"
     ]
	}
}